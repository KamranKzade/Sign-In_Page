                                     BorderThickness="0"
                                     FontSize="18"
                                     Padding="22 0"
                                     Text="Phone Number here"
                                     HorizontalAlignment="Left"/>


                        </Border>
                        <!---->
                    </Grid>

                </Grid>

                <!-- Button -->
                <Border Grid.Row="5"
                            VerticalAlignment="Center"
                            BorderBrush="Blue"
                            CornerRadius="20"
                            Height="30"
                            Width="180"
                            BorderThickness="3">

                    <Button BorderThickness="0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Foreground="Blue"
